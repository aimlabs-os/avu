{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    // "isolatedModules" : true,
    // "types": ["jest", "puppeteer", "node"],
    "rootDir": ".",
    "paths": {
      "@aimlabs/avu-common": ["packages/common/src"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/*/src/*.vue",
    "packages/*/__tests__",
    "test-dts"
  ]
}
